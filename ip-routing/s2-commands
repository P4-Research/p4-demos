table_set_default ingress.routing_table drop
table_set_default egress.switching_table drop
table_set_default egress.mac_rewriting_table drop

table_add ingress.routing_table ipv4_forward 10.0.10.0/24 => 192.168.3.254   2
table_add ingress.routing_table ipv4_forward 10.0.20.0/24 => 10.0.20.10      1
table_add ingress.routing_table ipv4_forward 10.0.30.0/24 => 192.168.2.1     3

table_add egress.switching_table set_dmac 10.0.20.10 => 00:00:00:00:00:02
table_add egress.switching_table set_dmac 192.168.2.1 => 00:00:00:00:03:02
table_add egress.switching_table set_dmac 192.168.3.254 => 00:00:00:00:01:02

table_add egress.mac_rewriting_table set_smac 1 => 00:00:00:00:02:01
table_add egress.mac_rewriting_table set_smac 2 => 00:00:00:00:02:02
table_add egress.mac_rewriting_table set_smac 3 => 00:00:00:00:02:03